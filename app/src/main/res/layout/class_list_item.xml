<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/classTeacher_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="23dp"
        android:text="Loading Class Teacher..."
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/class_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/classTeacher_value"
        android:layout_alignBottom="@+id/classTeacher_value"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp"
        android:text="Loading Class..."
        android:textSize="18sp" />
</RelativeLayout>
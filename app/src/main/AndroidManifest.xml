<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.pradyotprakash.newattendanceappadmin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AdminMainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AdminSetupActivity"
            android:parentActivityName=".AdminMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".AdminAllStudentList"
            android:parentActivityName=".AdminMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EachStudentInformation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AdminTimetable"
            android:parentActivityName=".AdminMainActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".AdminAddClasses"
            android:parentActivityName=".AdminMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectSemesterClassTimetable"
            android:parentActivityName=".AdminMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AdminStudentNotification"
            android:parentActivityName=".AdminMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AdminEachStudentNotification"
            android:parentActivityName=".EachStudentInformation"
            android:screenOrientation="portrait" />
        <activity android:name=".AdminAllFacultyList" />
        <activity android:name=".AssignClassTeacher" />
        <activity android:name=".EachClassDetails" />
        <activity android:name=".AddSubjects" />
        <activity android:name=".SelectSemesterClassSubjects" />
        <activity android:name=".AssignSubjectTeacher" />
        <activity android:name=".EachSubjectDetails" />
        <activity android:name=".AddTimetable" />
        <activity android:name=".SelectSubjectTimetable"/>
    </application>

</manifest>